{
  "manifest_version": 3,
  "name": "SanityShield",
  "version": "1.0.0",
  "description": "Reduce doomscrolling by hiding negative or unwanted content on Reddit and X.",
  "icons": {
    "16": "icons/icon16.png",
    "64": "icons/icon64.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "64": "icons/icon64.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/*",
        "https://old.reddit.com/*",
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ]
}
